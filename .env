########################
# üóÑÔ∏è MySQL Database
########################
MYSQL_ROOT_PASSWORD=1234
MYSQL_DATABASE=myapplication

# Spring Boot Datasource Configuration (uses Docker DNS names)
SPRING_DATASOURCE_URL=jdbc:mysql://mysql-db:3306/myapplication?createDatabaseIfNotExist=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=1234


########################
# üß∞ Nexus Repository
########################
# Default credentials for Nexus container (local use)
NEXUS_USERNAME=admin
NEXUS_PASSWORD=admin
# The internal Nexus URL (used in containers)
NEXUS_URL=http://nexus-repo:8081
# External access URL (optional, for Jenkins/Prod)
NEXUS_PUBLIC_URL=http://localhost:8081


########################
# ‚öôÔ∏è Spring Boot App
########################
# Application name (optional override)
SPRING_APPLICATION_NAME=Spring_sak

# App running port
SERVER_PORT=8085

# Active Spring profile
SPRING_PROFILES_ACTIVE=dev

# Multipart upload limits
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=5MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=5MB
